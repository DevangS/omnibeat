<mt:Window x:Class="OmniBeat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mt="http://schemas.multitouch.com/Multitouch/2008/04"
        xmlns:space="clr-namespace:InteractiveSpace.SDK.GUI;assembly=InteractiveSpace.SDK"
        xmlns:omni="clr-namespace:OmniBeat"
        Title="MainWindow" Height="1120" Width="1678" Closing="Window_Closing">
    <Grid Name="mainGrid">
        <space:TrackingVizLayer x:Name="vizLayer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsFingerVisible="True" Background="Black" Loaded="vizLayer_Loaded" Margin="0,-1,0,1" />
        <Button Name="playButton" Content="Play" Height="73" HorizontalAlignment="Left" Margin="440,70,0,0" VerticalAlignment="Top" Width="194" mt:MultitouchScreen.NewContact="playButton_NewContact" FontSize="40" Background="White" />
        <TextBlock Text="Tempo:" FontSize="45" Foreground="White" VerticalAlignment="Top" Margin="698,70,12,0" Height="73"></TextBlock>
        <omni:TouchSlider x:Name="TempoSlider" Margin="882,90,214,962" />
        <Button Name="kickSelectButton" Tag="0" Content="Kick" FontSize="45" Height="70" Width="270" mt:MultitouchScreen.NewContact="instrumentSelectButton_NewContact" Margin="67,552,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="snareSelectButton" Tag="1" Content="Snare" FontSize="45" Height="70" Width="270" mt:MultitouchScreen.NewContact="instrumentSelectButton_NewContact" Margin="67,644,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="closedHatsSelectButton" Tag="2" Content="Closed Hats" FontSize="45" Height="70" Width="270" mt:MultitouchScreen.NewContact="instrumentSelectButton_NewContact" Margin="67,736,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="openHatsSelectButton" Tag="3" Content="Open Hats" FontSize="45" Height="70" Width="270" mt:MultitouchScreen.NewContact="instrumentSelectButton_NewContact" Margin="67,828,0,0"  HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Name="beatButton1" Tag="0" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="440,648,0,0" VerticalAlignment="Top" />
        <Button Name="beatButton2" Tag="1" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="586,648,0,0" VerticalAlignment="Top" />
        <Button Name="beatButton3" Tag="2" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="734,648,0,0" VerticalAlignment="Top" />
        <Button Name="beatButton4" Tag="3" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="882,648,0,0" VerticalAlignment="Top" />
        <Button Name="beatButton5" Tag="4" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="1028,648,0,0" VerticalAlignment="Top" />
        <Button Name="beatButton6" Tag="5" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="1176,648,0,0" VerticalAlignment="Top"/>
        <Button Name="beatButton7" Tag="6" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="1324,648,0,0" VerticalAlignment="Top"/>
        <Button Name="beatButton8" Tag="7" Height="140" Width="140" mt:MultitouchScreen.NewContact="beatButton_NewContact" HorizontalAlignment="Left" Margin="1472,648,0,0" VerticalAlignment="Top"/>        
    </Grid>
</mt:Window>
